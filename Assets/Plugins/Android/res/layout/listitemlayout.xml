<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector" >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:padding="4dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ir.tapsell.tapselldevelopersdk.styledview.SquareImageView
                android:id="@+id/tapcoinicon"
                android:layout_width="46dip"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/tapcoin"
                android:scaleType="fitXY"
                android:src="@drawable/tapcoinicon2" />

            <ir.tapsell.tapselldevelopersdk.styledview.StyledTextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="36dip"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/error"
                />
        </FrameLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:background="@color/tapsell_divider"
            android:visibility="gone" />

        <ir.tapsell.tapselldevelopersdk.styledview.StyledTextView
            android:id="@+id/title"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/error" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:background="@color/tapsell_divider"
            android:visibility="gone" />

        <ir.tapsell.tapselldevelopersdk.styledview.SquareImageButton
            android:id="@+id/logo"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/mainicondark" />
    </LinearLayout>

</FrameLayout>