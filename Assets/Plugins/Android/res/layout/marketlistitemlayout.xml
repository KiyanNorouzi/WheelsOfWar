<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:padding="4dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ir.tapsell.tapselldevelopersdk.styledview.DonutProgress
                android:id="@+id/donut_progress"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:layout_gravity="center"
                android:layout_marginBottom="4dip"
                android:layout_marginTop="4dip"
                custom:donut_progress="30"
                custom:donut_text_color="@color/tapsell_orange"
                custom:donut_text_size="12sp"
                custom:donut_finished_stroke_width="8sp"
                custom:donut_unfinished_stroke_width="8sp"
                custom:donut_finished_color="@color/tapsell_orange"
                custom:donut_unfinished_color="@color/tapsell_gray" />

            <ir.tapsell.tapselldevelopersdk.styledview.SquareImageView
                android:id="@+id/tapcoinicon"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/tapcoin"
                android:scaleType="fitXY"
                android:src="@drawable/tapcoinicon2" />

            <ir.tapsell.tapselldevelopersdk.styledview.StyledTextView
                android:id="@+id/coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="+100"
                android:textColor="@color/tapsell_pen_color2" />
        </FrameLayout>

        <ir.tapsell.tapselldevelopersdk.styledview.StyledTextView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="@string/error"
            android:visibility="gone" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:background="@color/tapsell_divider"
            android:visibility="gone" />

        <ir.tapsell.tapselldevelopersdk.styledview.StyledTextView
            android:id="@+id/title"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/error" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:background="@color/tapsell_divider"
            android:visibility="gone" />

        <ir.tapsell.tapselldevelopersdk.styledview.SquareImageButton
            android:id="@+id/logo"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/mainicondark" />
    </LinearLayout>

</LinearLayout>